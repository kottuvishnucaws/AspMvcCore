@{
    ViewData["Title"] = "Home Page";
}
<style type="text/css">
    .bs-example {
        height: 220px;
    }

    .centerlook {
        padding-left: 400px;
        font-weight: bold;
        width: 1000px;
    }

    .error {
        padding-left: 400px;
        font-weight: bold;
        width: 1000px;
        color: red;
    }

    .loginbtn {
        padding-left: 500px;
    }
</style>
@model Student_Info
@using (Html.BeginForm())
{
<div class="bs-example" style="border:2px solid gray;">

    <div class="form-group centerlook">
    </div>
    <div class="form-group centerlook">
        <label>Student ID: </label>
        @Html.EditorFor(model => model.Student_ID)*

    </div>
    <div class="form-group centerlook">
        <label>Student Name: </label>
        @Html.EditorFor(model => model.Name)*

    </div>
    <div class="form-group centerlook">
        <label>Branch</label>
        @Html.EditorFor(model => model.Branch) *
    </div>
    <div class="form-group error">
        @if (@ViewBag.Success != null)
        {

            <label> @ViewBag.Success</label>
        }
    </div>

    <div class="loginbtn">

        <input type="submit" value="Submit" asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary" />

    </div>

</div>
}
